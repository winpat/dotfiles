#!/usr/bin/env nix-shell
#!nix-shell -i python3 -p python3Packages.astral

from astral import moon
from datetime import datetime
from typing import NamedTuple


class MoonPhase(NamedTuple):
    emoji: str
    name: str
    lower: float
    upper: float


phases = [
    MoonPhase(lower=0, upper=3.49, emoji="ðŸŒ‘", name="new"),
    MoonPhase(lower=3.5, upper=6.99, emoji="ðŸŒ’", name="waxing crescent"),
    MoonPhase(lower=7, upper=10.49, emoji="ðŸŒ“", name="first quarter"),
    MoonPhase(lower=10.5, upper=13.99, emoji="ðŸŒ”", name="first quarter"),
    MoonPhase(lower=14, upper=17.49, emoji="ðŸŒ•", name="full"),
    MoonPhase(lower=17.5, upper=20.99, emoji="ðŸŒ–", name="waning gibbous"),
    MoonPhase(lower=21, upper=24.49, emoji="ðŸŒ—", name="last quarter"),
    MoonPhase(lower=24.5, upper=27.99, emoji="ðŸŒ˜", name="waning crescent"),
]

current_phase = moon.phase(datetime.now())

for phase in phases:
    if phase.lower <= current_phase <= phase.upper:
        print(phase.emoji)
        break
